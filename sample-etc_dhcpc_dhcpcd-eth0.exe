#!/bin/sh
######################################################################
## $Header: /home/paul/src/ddclient/RCS/sample-etc_dhcpc_dhcpcd-eth0.exe,v 1.7 2001/02/17 21:21:45 root Exp $
######################################################################
PATH=$PATH:/root/bin:/root/sbin

## update the DNS server unless the IP address is a private address
## that may be used as a internal LAN address. This may be true if
## other interfaces are assigned private addresses from internal
## DHCP server.

case "$1" in
10.*)   	;;
176.1[6-9].* | 176.2[0-9].* | 176.31.*)	;;
192.168.*)	;;
*)
	logger -t dhcpcd IP address changed to $1
	/root/bin/ddclient -daemon=0 -syslog -use=ip -ip=$1 >/dev/null 2>&1
	;;
esac
